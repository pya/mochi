def truncate(value, limit):
    if value < 0:
        0
    elif value > limit:
        limit
    else:
        value

print('limit: 10')
print('value: 7', 'result:', truncate(7, 10))
print('value: -7', 'result:',truncate(-7, 10))
print('value: -17', 'result:',truncate(17, 10))

